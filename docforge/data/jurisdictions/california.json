{
  "id": "california",
  "name": "California State Court",
  "description": "California Superior Courts - governed by California Rules of Court",
  "governingRules": ["CRC Title 2", "Rules 2.100-2.118"],
  "note": "Judicial Council has preempted all local rules regarding format",
  
  "fonts": {
    "allowed": ["Times New Roman", "Courier", "Arial"],
    "minSize": 12,
    "footerMinSize": 10,
    "notes": "Must be essentially equivalent to Courier, Times New Roman, or Arial"
  },
  
  "margins": {
    "top": 1,
    "bottom": 0.5,
    "left": 1,
    "right": 0.5,
    "unit": "inches",
    "notes": "Right margin minimum is 1/2 inch (smaller than federal)"
  },
  
  "spacing": {
    "body": "1.5-or-double",
    "footnotes": "single",
    "quotations": "single",
    "propertyDescriptions": "single"
  },
  
  "lineNumbering": {
    "required": true,
    "lines": 28,
    "position": "left-margin",
    "separator": "vertical-line",
    "separatorWidth": 0.2,
    "restartEachPage": true,
    "minLinesPerInch": 3,
    "notes": "Consecutively numbered lines required on pleading paper"
  },
  
  "pageNumbering": {
    "required": true,
    "position": "bottom",
    "style": "arabic",
    "startPage": 1
  },
  
  "footer": {
    "required": true,
    "content": "document-title",
    "position": "bottom-margin",
    "separator": "printed-line",
    "minSize": 10,
    "notes": "Every page except exhibits must have footer with document title"
  },
  
  "captionFormat": "california",
  "captionStyle": {
    "separator": "v.",
    "firstPageLayout": {
      "lines1to7Left": ["attorney-name", "address", "phone", "fax", "email", "bar-number"],
      "lines1to7Right": "clerk-space-blank",
      "line8": "court-title",
      "belowCourt": {
        "left": "case-title",
        "right": ["case-number", "document-title", "judge", "department"]
      }
    },
    "courtFormat": "SUPERIOR COURT OF CALIFORNIA\nCOUNTY OF [COUNTY]"
  },
  
  "signatureFormat": "standard",
  "signatureRequirements": {
    "elements": ["signature", "typed-name", "bar-number", "firm-name", "address", "phone"],
    "partyDesignation": "Attorney for [Party]"
  },
  
  "caseClassification": {
    "limitedCivil": {
      "threshold": 35000,
      "captionRequired": "Limited Civil Case",
      "amountStatement": true
    }
  },
  
  "eFilingSystem": "varies-by-county",
  "eFilingRequirements": {
    "format": "PDF",
    "searchable": "when-feasible",
    "notes": "Each county may have different e-filing providers"
  },
  
  "exhibitLabeling": {
    "formats": ["numerical", "alphabetical"],
    "notes": "Footer rules don't apply to exhibits"
  },
  
  "specialRequirements": [
    "line-numbers-required",
    "footer-required",
    "pleading-paper-format",
    "28-lines-per-page"
  ],
  
  "uniqueFeatures": {
    "pleadingPaper": {
      "required": true,
      "lines": 28,
      "lineNumberColumn": true
    },
    "footerLine": {
      "required": true,
      "separator": "horizontal-rule"
    }
  },
  
  "clerkAcceptance": {
    "mustAccept": ["handwritten", "non-black-handwriting", "minor-font-variations"],
    "mayAccept": "non-compliant-for-good-cause"
  },
  
  "sectionNumbering": {
    "level1": "I, II, III",
    "level2": "A, B, C",
    "level3": "1, 2, 3",
    "notes": "No strict requirement, common practice"
  }
}
