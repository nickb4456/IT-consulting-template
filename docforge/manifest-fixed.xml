<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!--
  MANIFEST VALIDATION FIX SUMMARY
  ================================
  
  ROOT CAUSE: ALL icon URLs return HTML (text/html) instead of actual PNG images.
  Word validates that IconUrl and all bt:Image URLs return actual image data with
  proper content-type (image/png). The server is misconfigured and returns the 
  homepage HTML for any missing file.
  
  BROKEN URLs (all return HTML instead of PNG):
  - https://aibridges.org/docforge/assets/icon-16.png  → HTML (BROKEN)
  - https://aibridges.org/docforge/assets/icon-32.png  → HTML (BROKEN)
  - https://aibridges.org/docforge/assets/icon-64.png  → HTML (BROKEN)
  - https://aibridges.org/docforge/assets/icon-80.png  → HTML (BROKEN)
  - https://aibridges.org/docforge/assets/fill-*.png   → HTML (BROKEN)
  - https://aibridges.org/docforge/assets/numbering-*.png → HTML (BROKEN)
  - https://aibridges.org/docforge/assets/header-*.png → HTML (BROKEN)
  
  WORKING URLs:
  - https://aibridges.org/docforge/taskpane/taskpane  → HTML (OK)
  - https://aibridges.org/docforge/functions/functions → HTML (OK)
  
  TO FIX:
  1. Upload actual PNG files to /docforge/assets/ on the server
  2. Ensure server returns Content-Type: image/png for .png files
  3. Required icon sizes: 16x16, 32x32, 64x64, 80x80 pixels
  
  Below is a structurally correct manifest. Once images are uploaded, it will work.
-->
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
           xsi:type="TaskPaneApp">

    <!-- Unique identifier - keep this stable -->
    <Id>f03b294e-97e6-46c2-abb5-a00a4b88c60c</Id>
    <Version>1.0.0.0</Version>
    <ProviderName>DocForge</ProviderName>
    <DefaultLocale>en-US</DefaultLocale>
    <DisplayName DefaultValue="DocForge"/>
    <Description DefaultValue="Legal document automation for templates, numbering, and letterheads."/>
    
    <!-- These URLs MUST return actual PNG images with Content-Type: image/png -->
    <IconUrl DefaultValue="https://aibridges.org/docforge/assets/icon-32.png"/>
    <HighResolutionIconUrl DefaultValue="https://aibridges.org/docforge/assets/icon-64.png"/>
    <SupportUrl DefaultValue="https://aibridges.org"/>

    <!-- AppDomains - required for any external domains the add-in accesses -->
    <AppDomains>
        <AppDomain>https://aibridges.org</AppDomain>
    </AppDomains>

    <Hosts>
        <Host Name="Document"/>
    </Hosts>

    <!-- Requirements - WordApi 1.3 is reasonable for modern Word -->
    <Requirements>
        <Sets>
            <Set Name="WordApi" MinVersion="1.3"/>
        </Sets>
    </Requirements>

    <DefaultSettings>
        <SourceLocation DefaultValue="https://aibridges.org/docforge/taskpane/taskpane"/>
    </DefaultSettings>

    <Permissions>ReadWriteDocument</Permissions>

    <!-- VersionOverrides 1.0 for broad compatibility -->
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">
        <Hosts>
            <Host xsi:type="Document">
                <DesktopFormFactor>
                    <FunctionFile resid="Functions.Url"/>

                    <ExtensionPoint xsi:type="PrimaryCommandSurface">
                        <CustomTab id="DocForgeTab">
                            <!-- Label MUST come before Group elements -->
                            <Label resid="TabLabel"/>
                            <Group id="DocForgeGroup">
                                <Label resid="GroupLabel"/>
                                <Icon>
                                    <bt:Image size="16" resid="Icon.16x16"/>
                                    <bt:Image size="32" resid="Icon.32x32"/>
                                    <bt:Image size="80" resid="Icon.80x80"/>
                                </Icon>

                                <Control xsi:type="Button" id="TaskpaneButton">
                                    <Label resid="TaskpaneButton.Label"/>
                                    <Supertip>
                                        <Title resid="TaskpaneButton.Label"/>
                                        <Description resid="TaskpaneButton.Tooltip"/>
                                    </Supertip>
                                    <Icon>
                                        <bt:Image size="16" resid="Icon.16x16"/>
                                        <bt:Image size="32" resid="Icon.32x32"/>
                                        <bt:Image size="80" resid="Icon.80x80"/>
                                    </Icon>
                                    <Action xsi:type="ShowTaskpane">
                                        <TaskpaneId>DocForgePane</TaskpaneId>
                                        <SourceLocation resid="Taskpane.Url"/>
                                    </Action>
                                </Control>

                                <Control xsi:type="Button" id="QuickFillButton">
                                    <Label resid="QuickFill.Label"/>
                                    <Supertip>
                                        <Title resid="QuickFill.Label"/>
                                        <Description resid="QuickFill.Tooltip"/>
                                    </Supertip>
                                    <Icon>
                                        <bt:Image size="16" resid="Icon.16x16"/>
                                        <bt:Image size="32" resid="Icon.32x32"/>
                                        <bt:Image size="80" resid="Icon.80x80"/>
                                    </Icon>
                                    <Action xsi:type="ExecuteFunction">
                                        <FunctionName>quickFill</FunctionName>
                                    </Action>
                                </Control>

                                <Control xsi:type="Button" id="NumberingButton">
                                    <Label resid="Numbering.Label"/>
                                    <Supertip>
                                        <Title resid="Numbering.Label"/>
                                        <Description resid="Numbering.Tooltip"/>
                                    </Supertip>
                                    <Icon>
                                        <bt:Image size="16" resid="Icon.16x16"/>
                                        <bt:Image size="32" resid="Icon.32x32"/>
                                        <bt:Image size="80" resid="Icon.80x80"/>
                                    </Icon>
                                    <Action xsi:type="ExecuteFunction">
                                        <FunctionName>applyNumbering</FunctionName>
                                    </Action>
                                </Control>

                                <Control xsi:type="Button" id="HeaderButton">
                                    <Label resid="Header.Label"/>
                                    <Supertip>
                                        <Title resid="Header.Label"/>
                                        <Description resid="Header.Tooltip"/>
                                    </Supertip>
                                    <Icon>
                                        <bt:Image size="16" resid="Icon.16x16"/>
                                        <bt:Image size="32" resid="Icon.32x32"/>
                                        <bt:Image size="80" resid="Icon.80x80"/>
                                    </Icon>
                                    <Action xsi:type="ExecuteFunction">
                                        <FunctionName>insertHeader</FunctionName>
                                    </Action>
                                </Control>
                            </Group>
                        </CustomTab>
                    </ExtensionPoint>
                </DesktopFormFactor>
            </Host>
        </Hosts>

        <Resources>
            <bt:Images>
                <!-- All these URLs MUST return actual PNG images -->
                <bt:Image id="Icon.16x16" DefaultValue="https://aibridges.org/docforge/assets/icon-16.png"/>
                <bt:Image id="Icon.32x32" DefaultValue="https://aibridges.org/docforge/assets/icon-32.png"/>
                <bt:Image id="Icon.80x80" DefaultValue="https://aibridges.org/docforge/assets/icon-80.png"/>
            </bt:Images>

            <bt:Urls>
                <bt:Url id="Taskpane.Url" DefaultValue="https://aibridges.org/docforge/taskpane/taskpane"/>
                <bt:Url id="Functions.Url" DefaultValue="https://aibridges.org/docforge/functions/functions"/>
            </bt:Urls>

            <bt:ShortStrings>
                <bt:String id="TabLabel" DefaultValue="DocForge"/>
                <bt:String id="GroupLabel" DefaultValue="Document Tools"/>
                <bt:String id="TaskpaneButton.Label" DefaultValue="DocForge"/>
                <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Open DocForge panel"/>
                <bt:String id="QuickFill.Label" DefaultValue="Quick Fill"/>
                <bt:String id="QuickFill.Tooltip" DefaultValue="Fill template fields"/>
                <bt:String id="Numbering.Label" DefaultValue="Numbering"/>
                <bt:String id="Numbering.Tooltip" DefaultValue="Apply legal numbering"/>
                <bt:String id="Header.Label" DefaultValue="Header"/>
                <bt:String id="Header.Tooltip" DefaultValue="Insert letterhead"/>
            </bt:ShortStrings>

            <bt:LongStrings>
                <bt:String id="TaskpaneButton.Description" DefaultValue="Open DocForge for document automation."/>
            </bt:LongStrings>
        </Resources>
    </VersionOverrides>
</OfficeApp>
