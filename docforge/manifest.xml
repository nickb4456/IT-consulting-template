<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!--
  DocForge Word Add-in Manifest
  
  Based on: Microsoft Office Add-in Samples "Word Hello World"
  Source: https://github.com/OfficeDev/Office-Add-in-samples/blob/main/Samples/hello-world/word-hello-world/manifest.xml
  
  This manifest follows the exact element order from Microsoft's official sample
  which is known to validate against the Office Add-in XSD schema.
-->
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="TaskPaneApp">
  
  <!-- Unique add-in ID (generated UUID) -->
  <Id>a1b2c3d4-e5f6-7890-abcd-ef1234567890</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>AI Bridges</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="DocForge"/>
  <Description DefaultValue="AI-powered document formatting and analysis for Word."/>
  
  <!-- Icons for Office UI -->
  <IconUrl DefaultValue="https://aibridges.org/docforge/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://aibridges.org/docforge/assets/icon-64.png"/>
  
  <!-- Support URL -->
  <SupportUrl DefaultValue="https://aibridges.org/docforge/support"/>
  
  <!-- Allowed domains for the add-in -->
  <AppDomains>
    <AppDomain>https://aibridges.org</AppDomain>
  </AppDomains>
  
  <!-- Host application: Word (Document) -->
  <Hosts>
    <Host Name="Document"/>
  </Hosts>
  
  <!-- Default taskpane settings (fallback for older Office versions) -->
  <DefaultSettings>
    <SourceLocation DefaultValue="https://aibridges.org/docforge/taskpane/taskpane"/>
  </DefaultSettings>
  
  <!-- Permissions required -->
  <Permissions>ReadWriteDocument</Permissions>
  
  <!-- VersionOverrides for ribbon commands (Office 2016+) -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="Document">
        <DesktopFormFactor>
          <!-- First-run experience callout -->
          <GetStarted>
            <Title resid="GetStarted.Title"/>
            <Description resid="GetStarted.Description"/>
            <LearnMoreUrl resid="GetStarted.LearnMoreUrl"/>
          </GetStarted>
          
          <!-- Add button to Home tab ribbon -->
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="DocForgeGroup">
                <Label resid="DocForgeGroup.Label"/>
                <Icon>
                  <bt:Image size="16" resid="Icon.16x16"/>
                  <bt:Image size="32" resid="Icon.32x32"/>
                  <bt:Image size="80" resid="Icon.80x80"/>
                </Icon>
                
                <!-- Taskpane button -->
                <Control xsi:type="Button" id="TaskpaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.SupertipTitle"/>
                    <Description resid="TaskpaneButton.SupertipText"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>DocForgeTaskpane</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    
    <!-- Resources: images, URLs, and strings -->
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://aibridges.org/docforge/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://aibridges.org/docforge/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://aibridges.org/docforge/assets/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="GetStarted.LearnMoreUrl" DefaultValue="https://aibridges.org/docforge/help"/>
        <bt:Url id="Taskpane.Url" DefaultValue="https://aibridges.org/docforge/taskpane/taskpane"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GetStarted.Title" DefaultValue="Get started with DocForge!"/>
        <bt:String id="DocForgeGroup.Label" DefaultValue="DocForge"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="DocForge"/>
        <bt:String id="TaskpaneButton.SupertipTitle" DefaultValue="DocForge"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="GetStarted.Description" DefaultValue="DocForge loaded successfully. Go to the HOME tab and click the 'DocForge' button to get started."/>
        <bt:String id="TaskpaneButton.SupertipText" DefaultValue="Open the DocForge panel for AI-powered document tools"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
