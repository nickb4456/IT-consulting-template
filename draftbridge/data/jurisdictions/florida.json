{
  "id": "florida",
  "name": "Florida State Court",
  "description": "Florida Circuit Courts and District Courts of Appeal",
  "governingRules": ["Florida Rules of Judicial Administration", "Rule 2.520", "Florida Rules of Civil Procedure", "Florida Rules of Appellate Procedure"],
  
  "fonts": {
    "allowed": ["Times New Roman", "Courier New", "Arial"],
    "minSize": 12,
    "recommended": { "Times New Roman": 14 },
    "notes": "Must use Times New Roman, Courier New, or Arial"
  },
  
  "margins": {
    "top": 1,
    "bottom": 1,
    "left": 1,
    "right": 1,
    "unit": "inches"
  },
  
  "spacing": {
    "body": "double",
    "footnotes": "single",
    "quotations": "single",
    "headings": "single"
  },
  
  "lineNumbering": {
    "required": false
  },
  
  "pageNumbering": {
    "required": true,
    "position": "bottom-center",
    "style": "arabic"
  },
  
  "captionFormat": "florida",
  "captionStyle": {
    "separator": "v.",
    "caseNumberLabel": "CASE NO.:",
    "closingLine": true,
    "closingLineFormat": "________________________________/",
    "judicialCircuitFormat": "[ORDINAL] JUDICIAL CIRCUIT",
    "courtFormat": "IN THE CIRCUIT COURT OF THE [ORDINAL] JUDICIAL CIRCUIT\nIN AND FOR [COUNTY] COUNTY, FLORIDA",
    "example": "IN THE CIRCUIT COURT OF THE [ORDINAL] JUDICIAL CIRCUIT\nIN AND FOR [COUNTY] COUNTY, FLORIDA\n\n                                        CASE NO.: [NUMBER]\n                                        DIVISION: [DIVISION]\n\n[PLAINTIFF],\n\n         Plaintiff,\n\nv.\n\n[DEFENDANT],\n\n         Defendant.\n________________________________/"
  },
  
  "signatureFormat": "florida",
  "signatureRequirements": {
    "rule": "Rule 2.515",
    "elements": ["respectfully-submitted", "firm-name", "signature", "attorney-name", "bar-number", "address", "phone", "fax", "email", "secondary-email"],
    "electronicFormat": "/s/ [Name]",
    "emailRequired": true,
    "closing": "Attorney for [Party]"
  },
  
  "briefLimits": {
    "districtCourt": {
      "initial": { "words": 13000, "pages": 50 },
      "answer": { "words": 13000, "pages": 50 },
      "reply": { "words": 6500, "pages": 25 }
    },
    "supremeCourt": {
      "initial": { "words": 13000, "pages": 50 },
      "reply": { "words": 6500, "pages": 25 }
    },
    "motion": { "words": 2500 },
    "motionResponse": { "words": 2500 },
    "petitionForReview": { "words": 2000 },
    "petitionHabeasCorpus": { "words": 2000 }
  },
  
  "coverColors": {
    "initial": "white",
    "answer": "blue",
    "reply": "gray",
    "amicus": "green",
    "supplemental": "tan"
  },
  
  "eFilingSystem": "Florida Courts E-Filing Portal",
  "eFilingRequirements": {
    "mandatory": true,
    "format": "PDF",
    "searchable": true,
    "flattened": true,
    "maxSizeMB": 25,
    "maxEnvelopeMB": 50,
    "signature": "/s/ [Name]",
    "filingDeadline": "11:59 PM"
  },
  
  "serviceRequirements": {
    "rule": "Rule 2.516",
    "emailMandatory": true,
    "methods": ["email", "hand-delivery", "mail", "fax-if-consented"]
  },
  
  "exhibitLabeling": {
    "composite": true,
    "formats": ["1, 2, 3", "A, B, C"],
    "batesNumbering": "for-discovery"
  },
  
  "specialRequirements": [
    "closing-line-required",
    "judicial-circuit-ordinal",
    "email-required-for-service",
    "mandatory-efiling"
  ],
  
  "uniqueFeatures": {
    "closingLine": {
      "required": true,
      "format": "________________________________/",
      "position": "after-defendant-designation"
    },
    "judicialCircuit": {
      "format": "ordinal-spelled",
      "examples": ["ELEVENTH", "SEVENTEENTH", "NINTH"]
    },
    "divisionLine": {
      "included": true,
      "position": "after-case-number"
    }
  },
  
  "excludedFromWordCount": [
    "cover",
    "table-of-contents",
    "table-of-authorities",
    "certificate-of-service",
    "certificate-of-compliance",
    "appendix"
  ],
  
  "privacy": {
    "rule": "Rule 2.420",
    "redactionRequired": ["ssn", "bank-accounts", "minor-dob", "minor-names"]
  },
  
  "affidavitFormat": {
    "header": "STATE OF FLORIDA\nCOUNTY OF [COUNTY]",
    "opening": "BEFORE ME, the undersigned authority, personally appeared [NAME], who after being first duly sworn, deposes and says:",
    "closing": "FURTHER AFFIANT SAYETH NAUGHT.",
    "notaryBlock": true,
    "commissionExpires": true,
    "commissionNumber": true
  },
  
  "localVariations": {
    "miamidade": {
      "circuit": "11th",
      "adminOrder": "14-13",
      "pageLimit": true
    },
    "broward": {
      "circuit": "17th",
      "specialDivisionRules": true
    },
    "orangeOsceola": {
      "circuit": "9th",
      "businessCourt": true
    }
  },
  
  "sectionNumbering": {
    "paragraphs": "1, 2, 3",
    "level1": "I, II, III",
    "level2": "A, B, C",
    "level3": "1, 2, 3"
  }
}
