{
  "id": "new-york",
  "name": "New York State Court",
  "description": "New York Supreme Court and other state courts",
  "governingRules": ["CPLR", "22 NYCRR Part 202", "22 NYCRR Part 130"],
  
  "fonts": {
    "allowed": ["Times New Roman", "Arial", "Courier", "Helvetica"],
    "minSize": 12,
    "prohibited": ["script", "decorative"],
    "notes": "Clear, readable typeface required"
  },
  
  "margins": {
    "top": 1,
    "bottom": 1,
    "left": 1,
    "right": 1,
    "unit": "inches",
    "rightAlternate": 0.5
  },
  
  "spacing": {
    "body": "double",
    "footnotes": "single",
    "quotations": "single",
    "headings": "single",
    "signatureBlocks": "single",
    "captions": "single"
  },
  
  "lineNumbering": {
    "required": false
  },
  
  "pageNumbering": {
    "required": true,
    "position": "bottom-center-or-right",
    "style": "arabic"
  },
  
  "captionFormat": "new-york",
  "captionStyle": {
    "separator": "- against -",
    "caseNumberLabel": "Index No.:",
    "borderStyle": "dashed-X",
    "borderChar": "-",
    "terminatorChar": "X",
    "courtFormat": "SUPREME COURT OF THE STATE OF NEW YORK\nCOUNTY OF [COUNTY]",
    "example": "SUPREME COURT OF THE STATE OF NEW YORK\nCOUNTY OF [COUNTY]\n-------------------------------------------X\n[Plaintiff],\n                                          Index No.: XXXXX\n              Plaintiff,                  [DOCUMENT TITLE]\n    - against -\n[Defendant],\n              Defendant.\n-------------------------------------------X"
  },
  
  "signatureFormat": "new-york",
  "signatureRequirements": {
    "elements": ["firm-name", "signature-line", "attorney-name", "party-designation", "address", "phone", "fax", "email"],
    "dateFormat": "Dated: [City, State]\n       [Month Day, Year]"
  },
  
  "verification": {
    "oftenRequired": true,
    "format": "jurat",
    "elements": ["state-county-ss", "sworn-statement", "notary-block"]
  },
  
  "backing": {
    "traditional": "blue-backing",
    "currentStatus": "optional",
    "notes": "Traditional blue backing no longer mandatory in most courts"
  },
  
  "briefLimits": {
    "appellateDivision": {
      "principal": { "pages": 70 },
      "reply": { "pages": 35 }
    },
    "motions": {
      "memoranda": "varies-by-court",
      "typical": { "pages": 25 }
    }
  },
  
  "eFilingSystem": "NYSCEF",
  "eFilingRequirements": {
    "format": "PDF",
    "searchable": true,
    "maxSizeMB": 100,
    "signature": "/s/ [Name]",
    "notes": "Many counties now require e-filing for civil matters"
  },
  
  "certification": {
    "rule": "22 NYCRR 130-1.1a",
    "signingCertifies": ["not-frivolous", "reasonable-inquiry", "claims-have-merit"]
  },
  
  "exhibitLabeling": {
    "formats": ["A, B, C", "1, 2, 3"],
    "tabsRequired": true,
    "listRecommended": true
  },
  
  "specialRequirements": [
    "against-separator",
    "index-number",
    "verification-often-required",
    "dashed-X-border"
  ],
  
  "uniqueFeatures": {
    "captionSeparator": "- against -",
    "borderFormat": "---X",
    "indexNumber": true,
    "verificationCommon": true
  },
  
  "commercialDivision": {
    "rule": "22 NYCRR 202.70",
    "additionalRequirements": true,
    "stricterPageLimits": true,
    "preMotionConference": true
  },
  
  "affidavitFormat": {
    "header": "STATE OF NEW YORK  )\n                   ) ss.:\nCOUNTY OF [COUNTY] )",
    "opening": "[NAME], being duly sworn, deposes and says:",
    "closing": "notary-block"
  },
  
  "sectionNumbering": {
    "arguments": "POINT I, POINT II",
    "level1": "I, II, III",
    "level2": "A, B, C",
    "level3": "1, 2, 3"
  }
}
