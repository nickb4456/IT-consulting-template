{
  "id": "texas",
  "name": "Texas State Court",
  "description": "Texas District Courts and Courts of Appeals",
  "governingRules": ["TRCP", "TRAP", "Texas Rules of Judicial Administration"],
  
  "fonts": {
    "allowed": ["Times New Roman", "Century", "Courier"],
    "minSize": 14,
    "minSizeMonospaced": 12,
    "maxCPI": 10.5,
    "notes": "Proportionally-spaced must be 14pt minimum. Monospaced max 10.5 cpi."
  },
  
  "margins": {
    "top": 1,
    "bottom": 1,
    "left": 1,
    "right": 1,
    "unit": "inches"
  },
  
  "spacing": {
    "body": "double-or-1.5",
    "footnotes": "single",
    "quotations": "single",
    "headings": "single",
    "shortLists": "single"
  },
  
  "lineNumbering": {
    "required": false
  },
  
  "pageNumbering": {
    "required": true,
    "position": "bottom-center",
    "style": "arabic"
  },
  
  "captionFormat": "texas",
  "captionStyle": {
    "separator": "v.",
    "caseNumberLabel": "NO.",
    "sectionSignColumn": true,
    "sectionSign": "§",
    "courtDesignation": "right-column",
    "judicialDistrictFormat": "[XXX]th JUDICIAL DISTRICT",
    "example": "NO. [CAUSE NUMBER]\n\n[PLAINTIFF],              §    IN THE DISTRICT COURT OF\n                          §\n       Plaintiff,         §    [COUNTY] COUNTY, TEXAS\n                          §\nv.                        §\n                          §    [XXX]th JUDICIAL DISTRICT\n[DEFENDANT],              §\n       Defendant.         §"
  },
  
  "signatureFormat": "texas",
  "signatureRequirements": {
    "elements": ["respectfully-submitted", "firm-name", "signature-line", "attorney-name", "bar-number", "address", "phone", "fax", "email"],
    "closing": "ATTORNEY FOR [PARTY]"
  },
  
  "verification": {
    "format": "texas-jurat",
    "header": "STATE OF TEXAS     §\n                   §\nCOUNTY OF [COUNTY] §"
  },
  
  "briefLimits": {
    "courtsOfAppeals": {
      "principal": { "words": 15000, "pages": 50 },
      "reply": { "words": 7500, "pages": 25 },
      "amicus": { "words": 5000, "pages": 20 }
    },
    "supremeCourt": {
      "petition": { "words": 4500, "pages": 15 },
      "briefOnMerits": { "words": 15000, "pages": 50 },
      "reply": { "words": 7500, "pages": 25 }
    },
    "motionForRehearing": { "words": 4500, "pages": 15 }
  },
  
  "coverColors": {
    "appellant": "white",
    "appellee": "blue",
    "reply": "gray",
    "amicusForAppellant": "yellow",
    "amicusForAppellee": "green"
  },
  
  "eFilingSystem": "eFileTexas",
  "eFilingRequirements": {
    "mandatory": true,
    "rule": "TRJA Rule 21.3",
    "format": "PDF",
    "searchable": true,
    "flattened": true,
    "maxSizeMB": 25,
    "signature": "/s/ [Name]"
  },
  
  "exhibitLabeling": {
    "plaintiff": ["1", "2", "3"],
    "alphabetical": ["A", "B", "C"],
    "coverSheetRecommended": true
  },
  
  "specialRequirements": [
    "section-sign-column",
    "judicial-district-number",
    "mandatory-efiling",
    "14pt-font-minimum"
  ],
  
  "uniqueFeatures": {
    "sectionSignColumn": {
      "required": true,
      "character": "§",
      "separatesPartyFromCourt": true
    },
    "judicialDistrict": {
      "format": "ordinal",
      "example": "123rd JUDICIAL DISTRICT"
    }
  },
  
  "excludedFromWordCount": [
    "cover",
    "table-of-contents",
    "table-of-authorities",
    "signature-lines",
    "certificate-of-service",
    "certificate-of-compliance",
    "appendix"
  ],
  
  "certificateOfService": {
    "rule": "TRCP 21a",
    "methods": ["eFileTexas", "email", "certified-mail", "first-class-mail", "hand-delivery", "fax"]
  },
  
  "binding": {
    "trialCourt": ["staple", "binder-clip"],
    "appellate": ["perfect-binding", "saddle-stitch", "spiral", "comb"],
    "mustLieFlat": true
  },
  
  "sectionNumbering": {
    "paragraphs": "1, 2, 3",
    "level1": "I, II, III",
    "level2": "A, B, C",
    "notes": "No strict requirement"
  }
}
