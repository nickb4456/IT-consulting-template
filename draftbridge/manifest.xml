<?xml version="1.0" encoding="UTF-8"?>
<!--
  DraftBridge Word Add-in Manifest
  Version: 2.0.1.0
  
  ══════════════════════════════════════════════════════════════════════════════
  DEPLOYMENT INSTRUCTIONS:
  ══════════════════════════════════════════════════════════════════════════════
  
  FOR LOCAL TESTING (sideloading):
  - Keep URLs as https://aibridges.org/draftbridge
  - Run a local HTTPS server: npx http-server -S -C cert.pem -K key.pem -p 3000
  - Or use: npx office-addin-dev-certs install && npx office-addin-debugging start
  
  FOR PRODUCTION DEPLOYMENT:
  1. Replace ALL occurrences of "https://aibridges.org/draftbridge" with your hosted domain
     Example: https://app.draftbridge.com
  2. Ensure all icon files exist at the specified paths
  3. Upload taskpane.html, taskpane.js, taskpane.css, and icons to your server
  4. All URLs MUST use HTTPS - Office Add-ins require secure connections
  
  ══════════════════════════════════════════════════════════════════════════════
-->
<OfficeApp 
    xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
    xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
    xsi:type="TaskPaneApp">

  <!-- Unique ID - Valid GUID format -->
  <Id>a1b2c3d4-e5f6-7890-abcd-ef1234567890</Id>
  
  <!-- Version in x.x.x.x format -->
  <Version>2.0.1.0</Version>
  
  <ProviderName>DraftBridge Inc.</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  
  <DisplayName DefaultValue="DraftBridge"/>
  <Description DefaultValue="Legal document automation with Firm Clause Library. One-tap access to approved clauses, intelligent templates, and usage analytics."/>
  
  <!-- Icons - HTTPS required, 32x32 and 64x64 -->
  <IconUrl DefaultValue="https://aibridges.org/draftbridge/taskpane/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://aibridges.org/draftbridge/taskpane/icon-64.png"/>
  
  <!-- Support URL - HTTPS required -->
  <SupportUrl DefaultValue="https://draftbridge.com/support"/>
  
  <!-- Domains the add-in will access -->
  <AppDomains>
    <AppDomain>https://6b2bpmn8f8.execute-api.us-east-1.amazonaws.com</AppDomain>
    <AppDomain>https://draftbridge.com</AppDomain>
    <AppDomain>https://aibridges.org/draftbridge</AppDomain>
  </AppDomains>
  
  <!-- Host application: Word -->
  <Hosts>
    <Host Name="Document"/>
  </Hosts>
  
  <!-- API Requirements -->
  <Requirements>
    <Sets>
      <Set Name="WordApi" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  
  <!-- Default taskpane settings -->
  <DefaultSettings>
    <SourceLocation DefaultValue="https://aibridges.org/draftbridge/taskpane/taskpane.html"/>
  </DefaultSettings>
  
  <!-- Permissions for document access -->
  <Permissions>ReadWriteDocument</Permissions>

  <!-- Version Overrides for modern ribbon experience -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="Document">
        <DesktopFormFactor>
          <GetStarted>
            <Title resid="GetStarted.Title"/>
            <Description resid="GetStarted.Description"/>
            <LearnMoreUrl resid="GetStarted.LearnMoreUrl"/>
          </GetStarted>
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="DraftBridgeGroup">
                <Label resid="GroupLabel"/>
                <Icon>
                  <bt:Image size="16" resid="Icon.16x16"/>
                  <bt:Image size="32" resid="Icon.32x32"/>
                  <bt:Image size="80" resid="Icon.80x80"/>
                </Icon>
                <Control xsi:type="Button" id="TaskpaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Title"/>
                    <Description resid="TaskpaneButton.Description"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>DraftBridgeTaskpane</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://aibridges.org/draftbridge/taskpane/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://aibridges.org/draftbridge/taskpane/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://aibridges.org/draftbridge/taskpane/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Taskpane.Url" DefaultValue="https://aibridges.org/draftbridge/taskpane/taskpane.html"/>
        <bt:Url id="GetStarted.LearnMoreUrl" DefaultValue="https://draftbridge.com/help"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GetStarted.Title" DefaultValue="Get started with DraftBridge"/>
        <bt:String id="GroupLabel" DefaultValue="DraftBridge"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="DraftBridge"/>
        <bt:String id="TaskpaneButton.Title" DefaultValue="Open DraftBridge"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="GetStarted.Description" DefaultValue="Access your firm's clause library and generate documents with one tap."/>
        <bt:String id="TaskpaneButton.Description" DefaultValue="Open the DraftBridge panel to access your clause library, templates, and document tools."/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
