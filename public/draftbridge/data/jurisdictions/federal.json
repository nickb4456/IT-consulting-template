{
  "id": "federal",
  "name": "Federal Courts",
  "description": "U.S. Federal District Courts and Courts of Appeals",
  "governingRules": ["FRCP", "FRAP", "Local Rules"],
  
  "fonts": {
    "allowed": ["Times New Roman", "Century", "Courier"],
    "minSize": 14,
    "minSizeMonospaced": 12,
    "notes": "Proportionally-spaced must have serifs and be at least 14pt. Monospaced max 10.5 cpi."
  },
  
  "margins": {
    "top": 1,
    "bottom": 1,
    "left": 1,
    "right": 1,
    "unit": "inches"
  },
  
  "spacing": {
    "body": "double",
    "footnotes": "single",
    "quotations": "single",
    "headings": "single"
  },
  
  "lineNumbering": {
    "required": false
  },
  
  "pageNumbering": {
    "required": true,
    "position": "bottom-center",
    "style": "arabic"
  },
  
  "captionFormat": "federal",
  "captionStyle": {
    "separator": "v.",
    "caseNumberLabel": "Case No.",
    "example": "UNITED STATES DISTRICT COURT\n[DISTRICT] OF [STATE]\n\n[Plaintiff],\n    v.                              Case No. XX-XXXX\n[Defendant]."
  },
  
  "signatureFormat": "standard",
  "signatureRequirements": {
    "elements": ["signature", "name", "address", "email", "telephone", "barNumber"],
    "electronicFormat": "/s/ [Name]"
  },
  
  "briefLimits": {
    "principal": {
      "pages": 30,
      "words": 13000,
      "lines": 1300
    },
    "reply": {
      "pages": 15,
      "words": 6500,
      "lines": 650
    },
    "motion": {
      "words": 5200,
      "pages": 20
    },
    "petitionRehearing": {
      "words": 3900,
      "pages": 15
    }
  },
  
  "coverColors": {
    "appellant": "blue",
    "appellee": "red",
    "intervenor": "green",
    "amicus": "green",
    "reply": "gray",
    "supplemental": "tan",
    "appendix": "white"
  },
  
  "eFilingSystem": "CM/ECF",
  "eFilingRequirements": {
    "format": "PDF",
    "searchable": true,
    "maxSizeMB": 50,
    "signature": "/s/ [Name]"
  },
  
  "exhibitLabeling": {
    "plaintiff": ["1", "2", "3"],
    "defendant": ["A", "B", "C"],
    "alternateFormats": ["PX-1", "DX-A", "JX-1"]
  },
  
  "specialRequirements": [
    "certificate-of-compliance",
    "certificate-of-service",
    "disclosure-statement",
    "table-of-contents",
    "table-of-authorities"
  ],
  
  "excludedFromWordCount": [
    "cover",
    "disclosure-statement",
    "table-of-contents",
    "table-of-authorities",
    "oral-argument-statement",
    "addendum",
    "certificate-of-counsel",
    "signature-block",
    "proof-of-service"
  ],
  
  "sectionNumbering": {
    "level1": "I, II, III",
    "level2": "A, B, C",
    "level3": "1, 2, 3",
    "level4": "a, b, c"
  }
}
